# Application
APP_NAME=clipflow-api
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here
API_VERSION=v1
PORT=8000
# Database
DATABASE_URL=postgresql://clipflow:clipflow_password@clipflow-postgres:5432/clipflow

POSTGRES_USER=clipflow
POSTGRES_PASSWORD=clipflow_password
POSTGRES_DB=clipflow


# Redis
REDIS_URL=redis://clipflow-redis:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Storage
STORAGE_TYPE=local
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=500
ALLOWED_EXTENSIONS=mp4,webm,mov,avi,mkv,mp3,wav,m4a

# S3 Configuration (if STORAGE_TYPE=s3)
S3_BUCKET_NAME=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=
S3_ENDPOINT_URL=

# AI Features Toggle
AI_FEATURES_ENABLED=false
WHISPER_API_ENABLED=false
OPENAI_API_KEY=your-openai-api-key

# Processing Configuration
DEFAULT_PROCESSING_MODE=vad
VAD_AGGRESSIVENESS=3
MIN_SILENCE_DURATION_MS=300
MIN_SPEECH_DURATION_MS=250
SILENCE_THRESHOLD_DB=-40

# Filler Words Configuration (only used when WHISPER_API_ENABLED=true)
DETECT_FILLER_WORDS=true
FILLER_WORDS=um,uh,like,you know,basically,actually,literally,so,well,I mean
FILLER_WORD_PADDING_MS=100

# Celery
CELERY_BROKER_URL=redis://clipflow-redis:6379/1
CELERY_RESULT_BACKEND=redis://clipflow-redis:6379/2

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://clipflow-web:3000
